{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2020",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2020", "dom"]
  },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts", "src/__tests__"]
}